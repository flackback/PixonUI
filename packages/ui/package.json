{
  "name": "@pixonui/react",
  "version": "0.5.12",
  "description": "Modern, decoupled, glassmorphic UI library for React with zero heavy dependencies.",
  "author": "PixonUI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flackback/pixonui.git"
  },
  "bugs": {
    "url": "https://github.com/flackback/pixonui/issues"
  },
  "homepage": "https://pixonui.lovable.app",
  "keywords": [
    "react",
    "ui",
    "components",
    "glassmorphism",
    "tailwind",
    "design-system"
  ],
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "lucide-react": "^0.561.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.0",
    "socket.io-client": "^4.8.3",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "happy-dom": "^20.0.11",
    "lucide-react": "^0.561.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.15"
  }
}
