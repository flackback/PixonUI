{
  "name": "pixonui-monorepo",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc -b",
    "check": "npm run lint && npm run typecheck",
